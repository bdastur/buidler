{
        // Place your snippets for python here. Each snippet is defined under a snippet name and has a prefix, body and
        // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
        // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
        // same ids are connected.
        // Example:
        // "Print to console": {
        //      "prefix": "log",
        //      "body": [
        //              "console.log('$1');",
        //              "$2"
        //      ],
        //      "description": "Log output to console"
        // }
        "User specified Python Environment": {
                "prefix": "pyenv",
                "body": [
                        "#!/usr/bin/env python",
                        "# -*- coding: utf-8 -*-\n"
                ],
                "description": "Environment for Python"
        },
        "User specified ifmain snippet": {
                "prefix": "ifmain",
                "body": [
                        "def main():",
                        "    pass \n",
                        "if __name__ == \"__main__\":",
                    "    main() \n"
                ],
                "description": "if-main block"
        },
        "User specified function definition": {
                "prefix": "pydef",
                "body": [
                        "def ${1:function_name}(): ",
                        "    '''${2: one line description} \n",
                        "    :type ${3: argument}: ${4: data type}",
                        "    :param ${5: argument}: ${6: description}\n",
                        "    :returns: ",
                        "    ''' \n"
                ],
                "description": "function definition"
        },
        "User specified simpler version function definition": {
                "prefix": "pysimpledef",
                "body": [
                        "def ${1:function_name}(): ",
                        "    '''${2: one line description} '''\n"
                ],
                "description": "function definition"
        },
        "User specified test function definition": {
                "prefix": "pytestdef",
                "body": [
                        "def test_${1:function_name}(): ",
                        "    '''${2: one line description} '''\n"
                ],
                "description": "Unittest Test function definition"
        }
}
